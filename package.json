{
  "name": "easy_adb_fastboot",
  "version": "2.15.3",
  "description": "A graphical ADB and fastboot manager",
  "main": "main.js",
  "scripts": {
    "start": "webpack && electron .",
    "pack": "webpack && electron-builder --dir",
    "clean": "modclean --ignore='platform-tools'",
    "publish": "webpack && electron-builder build --publish always",
    "build": "webpack && electron-builder build --publish never",
    "webpack": "webpack"
  },
  "author": "ryantsui1109@github",
  "license": "Apache-2.0",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.2",
    "electron-dl": "^3.5.1",
    "electron-is-packaged": "^1.0.2",
    "electron-updater": "^6.1.4",
    "got": "^13.0.0",
    "jquery": "^3.7.1",
    "mica-electron": "^1.5.2",
    "react": "^18.2.0",
    "upath": "^2.0.1"
  },
  "devDependencies": {
    "args-parser": "^1.3.0",
    "decompress": "^4.2.1",
    "electron": "^25.9.2",
    "electron-builder": "^24.6.4",
    "follow-redirects": "^1.15.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platron-pt/platron.git"
  },
  "bugs": {
    "url": "https://github.com/platron-pt/platron/issues"
  },
  "homepage": "https://github.com/platron-pt/platron",
  "build": {
    "directories": {
      "output": "out"
    },
    "generateUpdatesFilesForAllChannels": true,
    "appId": "io.github.platron-pt",
    "productName": "Easy ADB and fastboot",
    "files": [
      "!{TODO.txt,.github,updaterStatus.json,scripts,default_*.json,platform-tools*,update.exe,readme-imgs,REAADME.md}"
    ],
    "extraFiles": [
      "updaterStatus.json",
      "config.json"
    ],
    "nsis": {
      "oneClick": false
    },
    "win": {
      "icon": "./favicon_256.ico",
      "artifactName": "${productName}-${os}-${arch}.${ext}",
      "extraFiles": [
        "platform-tools-win"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "extraFiles": "platform-tools-linux",
      "artifactName": "${productName}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "tar.xz",
          "arch": "x64"
        }
      ],
      "publish": [
        "github"
      ]
    }
  }
}
