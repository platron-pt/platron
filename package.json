{
  "name": "platron",
  "version": "3.1.2",
  "description": "A graphical ADB and fastboot manager",
  "main": "main.js",
  "scripts": {
    "start": "webpack --mode=development&& electron .",
    "pack": "webpack && electron-builder --dir",
    "clean": "modclean --ignore='platform-tools'",
    "build": "node scripts/platronMaker.js -h"
  },
  "author": "platron-pt@github",
  "license": "Apache-2.0",
  "dependencies": {
    "electron-dl": "^4.0.0",
    "electron-is-packaged": "^1.0.2",
    "electron-updater": "^6.6.2",
    "got": "^14.4.7",
    "mica-electron": "^1.5.16",
    "upath": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@popperjs/core": "^2.11.8",
    "args-parser": "^1.3.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "bootstrap": "^5.3.5",
    "bootstrap-icons": "^1.11.3",
    "classnames": "^2.5.1",
    "css-loader": "^7.1.2",
    "decompress": "^4.2.1",
    "deepmerge": "^4.3.1",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "follow-redirects": "^1.15.9",
    "html-webpack-plugin": "^5.6.3",
    "postcss-loader": "^8.1.1",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.9",
    "react-dom": "^19.1.0",
    "sass": "^1.87.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "svg-inline-loader": "^0.8.2",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platron-pt/platron.git"
  },
  "bugs": {
    "url": "https://github.com/platron-pt/platron/issues"
  },
  "homepage": "https://github.com/platron-pt/platron",
  "build": {
    "directories": {
      "output": "out"
    },
    "generateUpdatesFilesForAllChannels": true,
    "appId": "io.github.platron-pt",
    "productName": "Platron",
    "files": [
      "main.js",
      "package.json",
      "preload.js",
      "res",
      "dist"
    ],
    "extraFiles": [
      "updaterStatus.json",
      "config.json"
    ],
    "nsis": {
      "oneClick": false
    },
    "win": {
      "icon": "./res/img/icon_512.png",
      "artifactName": "${productName}-${os}-${arch}.${ext}",
      "extraFiles": [
        "platform-tools-win"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publish": [
        {
          "provider": "github",
          "owner": "platron-pt",
          "repo": "platron"
        }
      ]
    },
    "linux": {
      "icon": "./res/img/icon_512.png",
      "extraFiles": "platform-tools-linux",
      "artifactName": "${productName}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "tar.xz",
          "arch": "x64"
        }
      ],
      "publish": [
        "github"
      ]
    }
  }
}
